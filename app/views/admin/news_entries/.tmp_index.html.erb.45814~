<% if @news_entries.blank? %>
  <p>No news in database </p>
<% else %>
<u1>
    <table  class="index" >
       <% @news_entries.each do |news| %>
         <tr  class="node level-0">
           <td class="page"><%= link_to  news.headline, { :action => 'edit', :id => news.id } %></td>
           <td class="remove"><%= link_to image('remove', :alt => 'Remove News'), remove_admin_news_entry_url(:id => news.id) %></td>
         </tr>
      <%end%>
    </table>
</u1>
<div id="pagination" style='margin: 10px'>
<%= will_paginate @news_entries %>
</div>
<%- end %>

